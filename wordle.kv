#:kivy 2.0.0
#:import dp kivy.metrics.dp

# Define reusable styles for keyboard buttons
<KeyButton@Button>:
    font_size: '18sp'
    size_hint: None, None
    size: dp(40), dp(60)
    background_normal: ''
    background_color: 0.5, 0.5, 0.5, 1
    color: 1, 1, 1, 1
    bold: True
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(4)]

# Define the Tile widget style
<Tile@Label>:
    size_hint: None, None
    size: dp(56), dp(56)
    font_size: dp(32)
    bold: True
    halign: 'center'
    valign: 'middle'
    text_size: self.size
    color: 1, 1, 1, 1  # White text color
    canvas.before:
        Color:
            rgba: 0.12, 0.12, 0.12, 1  # Dark background color
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.3, 0.3, 0.3, 1  # Border color
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 2

<WordleGameUI>:
    tile_grid: tile_grid
    keyboard: keyboard

    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(20)

        Label:
            text: "WORDLE"
            font_size: '36sp'
            halign: 'center'
            valign: 'middle'
            size_hint_y: None
            height: self.texture_size[1] + dp(10)

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint_y: None
            height: dp(400)
            GridLayout:
                id: tile_grid
                cols: 5
                rows: 6
                spacing: dp(5)
                size_hint: None, None
                size: dp(325), dp(390)

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            BoxLayout:
